#/bin/bash

raspivid -o - -t 0 -w 640 -h 480 -fps 12 -n | ffmpeg -f h264 -r 12 -thread_queue_size 128 -i - -f alsa -ac 1 -thread_queue_size 128 -i plughw:1,0 -map 0:0 -map 1:0 -vcodec copy -acodec libmp3lame -ac 1 -ar 44100 -b:a 128k -f mpegts - | cvlc -vvv stream:///dev/stdin --sout '#rtp{sdp=rtsp://:8000/}'
